{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake-build-debug",
            "type": "shell",
            "command": "cmake --build ${workspaceFolder}/build --config Debug",
            "group": "build",
            "problemMatcher": ["$gcc"],
            "detail": "Build project in Debug mode"
        },
        {
            "label": "cmake-configure",
            "type": "shell",
            "command": "cmake -S ${workspaceFolder} -B ${workspaceFolder}/build -DCMAKE_BUILD_TYPE=Debug",
            "group": "build",
            "problemMatcher": [],
            "detail": "Configure CMake project"
        }
    ]
}